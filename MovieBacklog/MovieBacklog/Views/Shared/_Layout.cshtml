<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IMDB Movie Backlog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="~/logo.jpg" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 header-fixed">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-action="Index" asp-controller="Home">Movie Backlog</a>
                <a class="navbar-brand" asp-area="" asp-action="TvShows" asp-controller="Home">TV Shows</a>

                <form asp-action="Search">
                    <div class="form-group search-bar">
                        <input type="text" id="movieTitle" name="movieTitle"/>
                        <input type="submit" value="Search" class="btn btn-primary"/>
                    </div>
                </form>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 content-table">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MovieBacklog
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Index.js" type="text/javascript"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .header-fixed {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1;
    }

    .search-bar {
        padding-top: 5%;
    }

    .content-table {
        padding-top: 7rem;
    }
</style>